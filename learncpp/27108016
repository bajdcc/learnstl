      <button class="btn btn-grey-nborder" ng-click="showTopicModifyDialog = false">取消</button><button class="btn btn-blue" ng-disabled="!suggestTopics.length" ng-click="suggestTopics.length && editTopics()">确定</button>
    </div>
  </div>
